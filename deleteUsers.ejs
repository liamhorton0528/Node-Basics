<h2>Users: </h2>

<% for(i = 0; i < users.length; i++) {%>
    <div>
        <h3>ID: <%= users[i].id %> -- Name: <%= users[i].name %></h3>
        <form action="/api/users/delete/<%= users[i].id %>" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit">Delete</button>
        </form>
    </div>
<% } %>

